<UserControl x:Class="ExamTwoQuestions.PointOfSale.CustomizeCobblerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamTwoQuestions.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="40">Customize Cobbler</TextBlock>
            <TextBlock FontSize="20">Serve With Icecream?</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button Width="100" Height="50" Name ="IceCreamYes" Click="Button_Click">Yes</Button>
                <Button Width="100" Height="50" Name="IceCreamNo" Click="Button_Click">No</Button>
            </StackPanel>
            <TextBlock FontSize="20">Choose Filling</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button Width="100" Height="50" Click="Button_Click" Name="CherryButton">Cherry</Button>
                <Button Width="100" Height="50" Click="Button_Click" Name="PeachButton">Peach</Button>
                <Button Width="100" Height="50" Click="Button_Click" Name="BlueberryButton">Blueberry</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
